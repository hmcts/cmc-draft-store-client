{
  "name": "draft-store-client",
  "version": "1.0.0",
  "description": "Front end client for draft store",
  "private": true,
  "engines": {
    "node": ">=8.7.0"
  },
  "scripts": {
    "prepublishOnly": "tsc -p ./ --outDir dist/",
    "lint": "tslint --project tsconfig.json --type-check",
    "test": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\)) --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=draft-store-client",
    "test:coverage": "NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --opts mocha.opts $(find src/test \\( -name '*.ts' -or -name '*.js' \\))",
    "precommit": "yarn lint",
    "prepush": "yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git@git.github.com:hmcts/draft-store-client.git"
  },
  "author": "HMCTS Reform",
  "license": "MIT",
  "dependencies": {
    "@types/http-status-codes": "^1.0.29",
    "@types/lodash": "^4.14.52",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.24",
    "@types/request-promise-native": "^1.0.2",
    "body-parser": "^1.13.3",
    "build-url": "^1.0.9",
    "cli": "^1.0.1",
    "cookie-parser": "^1.4.3",
    "cookies": "^0.7.1",
    "es6-promisify": "^5.0.0",
    "http-status-codes": "^1.1.6",
    "mime": "^2.0.3",
    "moment": "^2.18.1",
    "nock": "^9.0.22",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.3",
    "require-directory": "^2.1.1",
    "shortid": "^2.2.6",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.2.0",
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/chai-as-promised": "^0.0.31",
    "@types/chai-spies": "^0.0.0",
    "@types/mocha": "*",
    "@types/sinon-chai": "^2.7.28",
    "@types/supertest": "*",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "debug": "^3.0.0",
    "husky": "^0.14.3",
    "mocha": "^3.5.0",
    "mochawesome": "^2.2.0",
    "mock-require": "^2.0.1",
    "nsp": "^2.6.3",
    "nyc": "^11.2.1",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "sinon-express-mock": "^1.3.0",
    "sonarqube-scanner": "^2.0.1",
    "supertest": "^3.0.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "include": [
      "src/main"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/main/public"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "coverage-report",
    "all": true
  }
}
